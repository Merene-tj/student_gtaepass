<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.gatepass.HODRequestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Spinner
            android:id="@+id/hodopenion"
            android:layout_width="match_parent"
            android:layout_height="50dp"></Spinner>

        <EditText
            android:id="@+id/hodrequestedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extra Comments"
            android:inputType="textMultiLine"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:padding="20dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/hodsubmit"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/request" />

    </LinearLayout>
</LinearLayout>
