<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.hp.gatepass.StudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:padding="20dp"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studentnameedt"
            android:hint="Student Name"
            />
        <EditText
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studentid"
            android:hint="Student ID"
            />
        <EditText
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studentdeptedt"
            android:padding="20dp"
            android:hint="Student Department"
            />
        <EditText
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mailedt"
            android:hint="Email"
            />
        <EditText
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numberedt"
            android:hint="Contact Number"
            android:inputType="number"
            />
        <EditText
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressedt"
            android:hint="Address"
            />
        <EditText
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parentnumberedt"
            android:hint="Parent Number"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:background="@drawable/register"
            android:layout_marginBottom="10dp"
            android:id="@+id/sturegbt"
            />


    </LinearLayout>
</ScrollView>
