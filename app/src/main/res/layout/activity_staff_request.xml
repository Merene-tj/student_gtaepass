<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.hp.gatepass.StaffRequestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Spinner
            android:id="@+id/staffopenion"
            android:layout_width="match_parent"
            android:layout_height="50dp"></Spinner>

        <EditText
            android:id="@+id/staffrequestedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extra Comments"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/staffsubmit"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/request" />

    </LinearLayout>


</LinearLayout>
