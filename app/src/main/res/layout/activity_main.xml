<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.gatepass.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/adminbt"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/admin" />

            <Button
                android:id="@+id/staffbt"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/staff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/hodbt"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/hod" />

            <Button
                android:id="@+id/studentbt"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/student" />
        </LinearLayout>

        <Button
            android:id="@+id/Securitybt"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/security"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
